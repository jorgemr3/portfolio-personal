    <Header />
    <main class="container mx-auto px-4">
      <h2>ðŸ‘‹ Welcome to My Portfolio</h2>

      <section>
        <h6>Languages</h6>
        <div class="skills-grid">
          {
            langs.map((lang) => (
              <figure class="card-img">
                <img src={lang.src} alt={lang.alt} />
                <figcaption>{lang.alt}</figcaption>
              </figure>
            ))
          }
        </div>
      </section>

      <section>
        <h6>Tools</h6>
        <div class="skills-grid">
          {
            tools.map((tool) => (
              <figure class="card-img">
                <img src={tool.src} alt={tool.alt} />
                <figcaption>{tool.alt}</figcaption>
              </figure>
            ))
          }
        </div>
      </section>

      <section>
        <h6>Frameworks</h6>
        <div class="skills-grid">
          {
            frameworks.map((fw) => (
              <figure class="card-img">
                <img src={fw.src} alt={fw.alt} />
