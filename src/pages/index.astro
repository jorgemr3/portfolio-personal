  { src: "/php.png", alt: "PHP" },
  { src: "/py.png", alt: "Python" },
  { src: "/html.png", alt: "HTML" },
  { src: "/css.png", alt: "CSS" },
  { src: "/sql.png", alt: "SQL" },
  { src: "/csharp.png", alt: "C#" },
];

const frameworks = [
  { src: "/astro.png", alt: "Astro" },
  { src: "/flutter.png", alt: "Flutter" },
  { src: "/laravel.png", alt: "Laravel" },
  { src: "/tailwind.png", alt: "Tailwind CSS" },
];

const tools = [
  { src: "/git.png", alt: "Git / GitHub" },
  { src: "/npm.png", alt: "npm" },
  { src: "/vscode.png", alt: "VS Code" },
  { src: "/firebase.png", alt: "Firebase" },
  { src: "/figma.png", alt: "Figma" },
  { src: "/hive.png", alt: "Hive" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      /* borrar luego  */
